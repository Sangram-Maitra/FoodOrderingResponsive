<form action="/signingup" method="post">
  <section class="mainBody" style="padding-top: 5rem;">
    <div class="box-form" style="margin: auto;" >
      <div class="right">
        <h5 style="padding-bottom: 5rem; padding-top: 2rem;">Sign Up</h5>
        <p>
          Already have an account?
          <a style="color: blue" href="/signIn">LogIn </a>No Problemo. . . Make your GF Wait But Not your TUMMY ‚ù§ 
        </p>
        <% if(serverError.length>0){ %>
          <span class="text-red-500 text-sm"><%=serverError%></span>
        <% } %>
        <div class="inputs">
        <input type="text" name="First_Name" class="form-control tex" id="Fname" required="required" placeholder="First Name">
