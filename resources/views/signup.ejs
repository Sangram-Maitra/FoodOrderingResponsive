          <input type="text" name="Last_Name" class="form-control tex" id="Lname" required="required" placeholder="Last name">
          <!-- <br /> -->
          <input type="text" name="add" class="form-control tex" id="Add" required="required" placeholder="Address">
          <!-- <br/> -->
          <input type="number" name="Phone" class="form-control tex" id="phNo" required="required" placeholder="PhoneNumber">
          <!-- <br /> -->
          <input type="password" name="pass" placeholder="password" />
        </div>

        <br /><br />

        <div class="remember-me--forget-password">
          <!-- Angular -->
          <label>
            <input type="checkbox" name="item" />
            <span class="text-checkbox">Remember me</span>
          </label>
        </div>
        <br/>

        <button>SignUp</button>
      </div>
      <div class="left">
        <div class="overlay">
          <h1>YAMMiTO</h1>
          <h2>Don't make your tummy wait order quickly :P</h2>
        </div>
      </div>
